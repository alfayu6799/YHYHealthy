<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_ble">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/font_ble_paired_devices"
        android:text="@string/ble_paired_devices"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBleScanView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBleCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_ble_paired_devices"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:background="@color/translucent"
            android:text="@string/dialog_cancel"/>
        <Button
            android:id="@+id/btnBleSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/greenDark"
            android:background="@color/translucent"
            android:visibility="invisible"
            android:text="搜尋"/>
    </LinearLayout>
</LinearLayout>