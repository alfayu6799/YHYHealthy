<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/yhy_background"
    tools:context=".UserBasicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBackSetting6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_32"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="100dp"
            android:textSize="24dp"
            android:text="@string/setting_user_basic_info"/>

        <Button
            android:id="@+id/btnSaveToApi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:text="@string/slycalendar_save"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_268e9f"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView39">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textUserAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:textSize="24dp"
                android:gravity="center"
                android:background="@drawable/shape_edit_background"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/edtChangeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_edit_background"
                android:padding="10dp"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:hint="@string/please_input_name"/>
            <TextView
                android:id="@+id/textGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_edit_background"
                android:padding="10dp"
                android:textSize="20dp"
                android:text="@string/please_input_gender"/>
            <EditText
                android:id="@+id/edtEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:lines="1"
                android:maxLength="20"
                android:padding="10dp"
                android:background="@drawable/shape_edit_background"
                android:inputType="textEmailAddress"
                android:hint="@string/please_input_email"/>
            <TextView
                android:id="@+id/textBornDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:background="@drawable/shape_edit_background"
                android:text="@string/please_input_birthday"/>
            <EditText
                android:id="@+id/edtAreaCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="5"
                android:background="@drawable/shape_edit_background"
                android:inputType="number"
                android:padding="10dp"
                android:hint="@string/please_input_area_code"/>
            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_edit_background"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:hint="@string/please_input_phone"/>
            <EditText
                android:id="@+id/edtHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:hint="@string/please_input_height"
                android:background="@drawable/shape_edit_background"/>
            <EditText
                android:id="@+id/editWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_edit_background"
                android:padding="10dp"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/please_input_weight"/>
            <TextView
                android:id="@+id/textBMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_edit_background"
                android:textSize="20dp"
                android:text="BMI"
                android:padding="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>