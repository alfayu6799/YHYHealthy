<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yhy_background"
    tools:context=".fragments.DocumentaryFragment">

    <LinearLayout
        android:id="@+id/ly_record"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:gravity="center"
                android:text="排卵辨識"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:gravity="center"
                android:text="2020/10/19"/>
        </LinearLayout>
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="wrap_content">
        </View>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/ig_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ovul"/>
            <Button
                android:id="@+id/bt_take_photo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ig_photo"
                android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
                android:gravity="center"
                android:paddingLeft="70dp"
                android:paddingRight="60dp"
                android:background="@drawable/shape_268e9f"
                android:textColor="@color/white"
                android:text="拍照"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="22sp"
                android:text="分析結果 : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="濾泡/黃體期"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_analysis"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:text="說明"/>
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="wrap_content">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:layout_marginLeft="55dp"
                android:text="基礎體溫"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:src="@drawable/ic_add_circle_outline_black_48dp"/>
        </LinearLayout>
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_body_temp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="42dp"
                android:text="36.5"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/tv_body_temp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_thermometer_24"
                android:paddingLeft="70dp"
                android:paddingRight="35dp"
                android:background="@drawable/shape_268e9f"
                android:textColor="@color/white"
                android:text="開始測量"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/ly_scroll_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="335dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:text="體重(kg)"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="22sp"
                    android:layout_marginRight="10dp"
                    android:text="---(kg)"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>