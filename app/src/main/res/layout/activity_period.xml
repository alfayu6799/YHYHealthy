<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yhy_background"
    tools:context=".PeriodRecordActivity">
    <LinearLayout
        android:id="@+id/ly_reocrd_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/font_last_recognition_ovulation"
            android:gravity="center"
            android:text="@string/last_recognition_ovulation"/>
        <TextView
            android:id="@+id/tvRecordDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:gravity="center"
            android:text="2020/10/19"/>
    </LinearLayout>
    <View
        android:id="@+id/view_1"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_below="@+id/ly_reocrd_title"
        android:layout_width="wrap_content">
    </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/ovul"/>
                <Button
                    android:id="@+id/btnPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ivPhoto"
                    android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@drawable/shape_268e9f"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="@dimen/record_take_photo"
                    android:text="@string/record_take_photo"/>
                <Button
                    android:id="@+id/btnPhotoIdentify"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/btnPhoto"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ivPhoto"
                    android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:background="@drawable/shape_268e9f"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_record_id_photo"
                    android:text="@string/identify" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/font_analysis_result"
                    android:text="@string/analysis_result"/>
                <TextView
                    android:id="@+id/tvAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_tvAnalysis"/>
            </LinearLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/basal_body_degree"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/body_degree"/>
                <TextView
                    android:id="@+id/tvBLEConnectStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/font_record_ble_status"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/not_connect_yet"/>
                <ImageView
                    android:id="@+id/ivBLESearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add_circle_outline_black_48dp"/>
            </LinearLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content">
            </View>
            <LinearLayout
                android:id="@+id/ly_progressBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/red"
                    android:text="@string/ble_connecting_measure"/>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:indeterminate="false"
                    android:progress="10"
                    android:max="100"
                    android:minHeight="40dp"
                    android:minWidth="280dp"/>
            </LinearLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvBodyTemp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="42dp"
                    android:text="34.5"/>
                <Button
                    android:id="@+id/btnStartMeasure"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/tvBodyTemp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/ic_thermometer_24"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:background="@drawable/shape_268e9f"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:visibility="invisible"
                    android:text="@string/record_start_ble_measure"/>
            </LinearLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_record_body_weight"
                    android:layout_marginLeft="8dp"
                    android:text="@string/recode_body_weight"/>
                <EditText
                    android:id="@+id/edtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/record_please_input_body_weight"/>
            </LinearLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/font_non_menstrual_bleeding"
                    android:textColor="@color/black"
                    android:text="@string/non_menstrual_bleeding"/>
                <Switch
                    android:id="@+id/swBleeding"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:track="@drawable/sw_track"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_chest_pain"
                    android:text="@string/chest_pain"/>
                <Switch
                    android:id="@+id/swBreastPain"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:track="@drawable/sw_track"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_intercourse"
                    android:layout_marginLeft="8dp"
                    android:text="@string/intercourse"/>
                <Switch
                    android:id="@+id/swIntercourse"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:track="@drawable/sw_track"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_secretions"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:text="@string/secretions"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_secretions_all"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:text="@string/secretions_color"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <!-- 使用者輸入資料區 (顏色)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.yhyhealthy.tools.MyGridView
                    android:id="@+id/gvColor"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_secretions_all"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:text="@string/secretions_scent"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>

            <!-- 使用者輸入資料區 (味道)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.yhyhealthy.tools.MyGridView
                    android:id="@+id/gvTaste"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_secretions_all"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:text="@string/secretions_texture"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>

            <!-- 使用者輸入資料區 (型態)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.yhyhealthy.tools.MyGridView
                    android:id="@+id/gvType"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_secretions_all"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:text="@string/secretions_symptoms"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <!-- 使用者輸入資料區 (症狀)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.yhyhealthy.tools.MyGridView
                    android:id="@+id/gvSymptom"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <Button
                android:id="@+id/btnSaveSetting"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/font_secretions_all"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:background="@drawable/shape_btn_pressed"
                android:textColor="@color/black"
                android:text="@string/update_to_api"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>