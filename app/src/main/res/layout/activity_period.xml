<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yhy_background"
    tools:context=".PeriodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:gravity="center"
                android:text="排卵辨識"/>
            <TextView
                android:id="@+id/tvRecordDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:gravity="center"
                android:text="2020/10/19"/>
        </LinearLayout>
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="wrap_content">
        </View>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ovul"/>
            <Button
                android:id="@+id/btnPhoto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ivPhoto"
                android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@drawable/shape_268e9f"
                android:textColor="@color/white"
                android:text="拍照"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="22sp"
                android:text="分析結果 : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="濾泡/黃體期"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_analysis"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:text="說明"/>
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="wrap_content">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:layout_marginLeft="55dp"
                android:text="基礎體溫"/>
            <TextView
                android:id="@+id/tvBLEConnectStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:text="@string/not_connect_yet"/>
            <ImageView
                android:id="@+id/ivBLESearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_circle_outline_black_48dp"/>
        </LinearLayout>
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBodyTemp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="42dp"
                android:text="36.5"/>
            <Button
                android:id="@+id/btnStartMeasure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/tvBodyTemp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_thermometer_24"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@drawable/shape_268e9f"
                android:textColor="@color/white"
                android:text="開始測量"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/ly_scroll_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="335dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:text="體重(kg)"/>
                <EditText
                    android:id="@+id/edtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:hint="請自行輸入體重"/>
            </LinearLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:text="非經期出血"/>
                <Switch
                    android:id="@+id/swBleeding"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:track="@drawable/sw_track"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:text="乳房脹痛"/>
                <Switch
                    android:id="@+id/swPain"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:track="@drawable/sw_track"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:text="同房"/>
                <Switch
                    android:id="@+id/swSleepTo"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:track="@drawable/sw_track"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:text="分泌物"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_18"
                android:textColor="@color/black"
                android:text="顏色"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <!-- 使用者輸入資料區 (顏色)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.yhyhealthydemo.tools.MyGridView
                    android:id="@+id/gvColor"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_18"
                android:textColor="@color/black"
                android:text="味道"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>

            <!-- 使用者輸入資料區 (味道)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.yhyhealthydemo.tools.MyGridView
                    android:id="@+id/gvTaste"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_18"
                android:textColor="@color/black"
                android:text="型態"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>

            <!-- 使用者輸入資料區 (型態)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.yhyhealthydemo.tools.MyGridView
                    android:id="@+id/gvType"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_18"
                android:textColor="@color/black"
                android:text="症狀"/>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <!-- 使用者輸入資料區 (症狀)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.yhyhealthydemo.tools.MyGridView
                    android:id="@+id/gvSymptom"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:focusable="true"
                    android:numColumns="3"
                    android:padding="8dp"/>
            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:background="#000000"
                android:layout_width="wrap_content"/>
            <Button
                android:id="@+id/btnSaveSetting"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/font_18"
                android:layout_gravity="center"
                android:background="@drawable/shape_btn_pressed"
                android:textColor="@color/black"
                android:text="儲存"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>