<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yhy_background"
    android:orientation="vertical"
    tools:context=".OvulationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:gravity="center"
        android:text="@string/ovulation"/>
<!--    <include layout="@layout/app_bar"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSwitchCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@drawable/relative_shape"
            android:layout_weight="1"
            android:text="月曆"/>
        <Button
            android:id="@+id/btnSwitchChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/relative_shape"
            android:text="圖表"
            android:textSize="18dp"/>
    </LinearLayout>
    <!-- 月曆區 -->
    <LinearLayout
        android:id="@+id/ly_calender"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:visibility="gone">
        <!-- 月曆元件 第三方庫 -->
        <TextView
            android:id="@+id/main_YYMM_Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:background="@color/translucent"
            android:text="----年-月" />

        <com.example.yhyhealthydemo.tools.WeekColumnView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp" />

        <sun.bob.mcalendarview.views.ExpCalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/ly_scroll_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg">
                <TextView
                    android:id="@+id/tv_ovul_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="22sp"
                    android:text="今天是週期第N天"/>
                <TextView
                    android:id="@+id/tv_ovul_result_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/tv_ovul_period"
                    android:textSize="@dimen/font_18"
                    android:text="唾液辨識 :"/>
                <TextView
                    android:id="@+id/tv_ovul_probability_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_result_1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/font_18"
                    android:text="排卵機率 :"/>
                <ImageView
                    android:id="@+id/ig_ovul_1_start1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_result_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignTop="@+id/tv_ovul_probability_1"
                    android:layout_toRightOf="@+id/tv_ovul_probability_1"
                    android:src="@mipmap/start_yellow"/>
                <ImageView
                    android:id="@+id/ig_ovul_1_start2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_result_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignTop="@+id/tv_ovul_probability_1"
                    android:layout_toRightOf="@+id/ig_ovul_1_start1"
                    android:src="@mipmap/start_yellow"/>
                <ImageView
                    android:id="@+id/ig_ovul_1_start3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_result_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignTop="@+id/tv_ovul_probability_1"
                    android:layout_toRightOf="@+id/ig_ovul_1_start2"
                    android:src="@mipmap/start_yellow"/>
                <ImageView
                    android:id="@+id/ig_ovul_1_start4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_result_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignTop="@+id/tv_ovul_probability_1"
                    android:layout_toRightOf="@+id/ig_ovul_1_start3"
                    android:src="@mipmap/start_yellow"/>
                <ImageView
                    android:id="@+id/ig_ovul_1_start5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_result_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignTop="@+id/tv_ovul_probability_1"
                    android:layout_toRightOf="@+id/ig_ovul_1_start4"
                    android:src="@mipmap/start"/>
                <TextView
                    android:id="@+id/tv_ovul_temp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_probability_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/font_18"
                    android:text="基礎體溫 :"/>
                <TextView
                    android:id="@+id/tv_ovul_rate_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_temp_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/font_18"
                    android:text="排卵機率 :"/>
                <ImageView
                    android:id="@+id/ig_ovul_2_start1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_temp_1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignTop="@+id/tv_ovul_rate_1"
                    android:layout_toRightOf="@+id/tv_ovul_rate_1"
                    android:src="@mipmap/start_yellow"/>
                <ImageView
                    android:id="@+id/ig_ovul_2_start2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_temp_1"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/ig_ovul_2_start1"
                    android:layout_toRightOf="@+id/ig_ovul_2_start1"
                    android:src="@mipmap/start_yellow"/>
                <ImageView
                    android:id="@+id/ig_ovul_2_start3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_temp_1"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/ig_ovul_2_start2"
                    android:layout_toRightOf="@+id/ig_ovul_2_start2"
                    android:src="@mipmap/start_yellow"/>
                <ImageView
                    android:id="@+id/ig_ovul_2_start4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_temp_1"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/ig_ovul_2_start3"
                    android:layout_toRightOf="@+id/ig_ovul_2_start3"
                    android:src="@mipmap/start"/>
                <ImageView
                    android:id="@+id/ig_ovul_2_start5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ovul_temp_1"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/ig_ovul_2_start4"
                    android:layout_toRightOf="@+id/ig_ovul_2_start4"
                    android:src="@mipmap/start"/>
                <TextView
                    android:id="@+id/tv_ovul_setting"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_ovul_period"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:background="@drawable/shape_for_ovulation"
                    android:text="經期\n設定"/>
                <TextView
                    android:id="@+id/tv_ovul_edit"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_ovul_period"
                    android:layout_below="@+id/tv_ovul_setting"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:background="@drawable/shape_for_ovulation"
                    android:text="編輯\n紀錄"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/corners_bg">
                <LinearLayout
                    android:id="@+id/ly_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_brightness_1_24dp"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_brightness_2_24dp"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_brightness_3_24dp"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_brightness_4_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_color_sub"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ly_color"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="月經"/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="排卵期"/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="非排卵期"/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="濾泡/黃體期"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_color2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ly_color_sub"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/shape_dash_5"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/shape_dash_6"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/shape_dash_7"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:src="@drawable/shape_dash_7"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_color_sub2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ly_color2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="預計經期"/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="預計排卵期"/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="預計排卵日"/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:text="濾泡/黃體期"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <!-- 圖表區 -->
    <LinearLayout
        android:id="@+id/lychart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgPreMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_skip_previous_24dp"/>
            <TextView
                android:id="@+id/tvMMDD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="22dp"
                android:text="11/01 ~ 11/30"/>
            <ImageView
                android:id="@+id/imgNextMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_skip_next_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_brightness_1_24dp"
                android:textSize="16sp"
                android:layout_marginLeft="180dp"
                android:text="月經"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_brightness_2_24dp"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:text="排卵期"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/corners_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:text="@string/chart_remind"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>